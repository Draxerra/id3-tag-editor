{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"]
        },
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": false,
        "target": "es6",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es2017", "dom"],
        "esModuleInterop": true
    }
}